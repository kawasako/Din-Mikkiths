<div class="container">

  <h1>Users</h1>

  <!-- 操作が成功したときに表示する -->
  <% if notice %>
    <p class="alert alert-success">
      <a class="close" data-dismiss="alert">&times;</a>
      <%= notice %>
    </p>
  <% end %>

  <!-- 操作が失敗したときに表示する -->
  <% if alert %>
    <p class="alert alert-error">
      <a class="close" data-dismiss="alert">&times;</a>
      <%= alert %>
    </p>
  <% end %>

  <!-- 入力フォーム -->
  <div>
    <%= form_tag({:controller => :users, :action => :create}, {:class => "input-append"}) do %>
      <%= text_field_tag "user[id]", "", :id => "user_id" %>
      <%= text_field_tag "user[password]", "", :id => "user_password" %>
      <%= submit_tag "ADD", :class => "btn" %>
    <% end %>
  </div>

  <!-- アイテム一覧 -->
  <div>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <th>Id</th>
          <th>CreatedAt</th>
          <th>UpdatedAt</th>
          <th>Delete</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td class="span3">
              <%= user.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </td>
            <td class="span3">
              <%= user.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </td>
            <td class="span1">
              <%= button_to 'Delete', { :action => "destroy", :id => user.id }, method: :delete, class: 'btn btn-small btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>